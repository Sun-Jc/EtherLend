<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top"
            android:id="@+id/topText" android:layout_alignParentLeft="false" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="false" android:layout_marginTop="0dp" android:gravity="fill_horizontal|center_vertical|center|fill_vertical|center_horizontal"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_centerHorizontal="true"/>
    <ImageView android:layout_width="300dp"
               android:layout_height="300dp"
               android:id="@+id/img" android:layout_alignParentLeft="false" android:layout_marginLeft="0dp"
               android:layout_alignParentTop="false" android:layout_marginTop="0dp"
               android:layout_below="@+id/topText"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bottom"
              android:id="@+id/bottomText" android:layout_marginLeft="0dp"
              android:layout_alignParentTop="false" android:layout_alignParentStart="false"
              android:layout_below="@+id/img" android:textSize="20sp"
              android:gravity="fill_horizontal|center_vertical|center|fill_vertical|center_horizontal"
              android:layout_centerHorizontal="true"/>
    <!-- <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="OK" android:onClick="dismissListener"/>-->
</RelativeLayout>