<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/imageView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:background="@drawable/bg"
    />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/meetings"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentLeft="false" android:layout_alignParentTop="false"
            android:layout_below="@+id/textView2" android:layout_marginTop="12dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading Account"
            android:id="@+id/ac" android:layout_gravity="center_horizontal|top"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_alignParentStart="false" android:layout_marginTop="180dp" android:layout_marginLeft="30dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading Balance"
            android:id="@+id/bal" android:layout_gravity="center_horizontal|top"
            android:layout_above="@+id/textView2" android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp" android:textSize="16dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:id="@+id/apply" android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false" android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_white_24dp"
            app:backgroundTint="@color/colorAccent" android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp" android:layout_marginTop="20dp"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:id="@+id/refresh" android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false" android:layout_alignParentStart="false"
            android:layout_alignParentBottom="false" android:layout_alignParentRight="true"
            android:src="@drawable/ic_autorenew_white_24dp"
            app:backgroundTint="#FF6E40" android:layout_marginBottom="0dp"
            android:layout_marginRight="30dp" android:layout_above="@+id/apply"
            android:layout_alignWithParentIfMissing="false"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meetings"
            android:id="@+id/textView2" android:layout_centerVertical="true" android:layout_alignParentStart="false"
            android:layout_below="@+id/imageView" android:layout_marginTop="6dp" android:layout_marginLeft="6dp"/>
</RelativeLayout>

