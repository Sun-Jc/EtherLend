<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading Service"
            android:id="@+id/service" android:layout_gravity="center_horizontal|top" android:layout_marginTop="0dp"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/meetings"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="418dp" android:layout_gravity="center_horizontal|bottom"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading Account"
            android:id="@+id/ac" android:layout_gravity="center_horizontal|top" android:layout_marginTop="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading Balance"
            android:id="@+id/bal" android:layout_gravity="center_horizontal|top" android:layout_marginTop="100dp"/>
    <com.rey.material.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom"
            android:id="@+id/apply"/>

</FrameLayout>

